{
    "name": "multiplayer-turn-based-game-engine",
    "version": "1.0.0",
    "description": "Backend logic and turn handling for multiplayer turn-based games",
    "main": "src/server.js",
    "scripts": {
        "start": "node src/server.js",
        "dev": "nodemon src/server.js",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "lint": "eslint src/",
        "lint:fix": "eslint src/ --fix",
        "build": "babel src -d dist",
        "docker:build": "docker build -t game-engine .",
        "docker:run": "docker run -p 3000:3000 game-engine"
    },
    "keywords": [
        "multiplayer",
        "turn-based",
        "game-engine",
        "websocket",
        "real-time",
        "nodejs",
        "express",
        "mongodb"
    ],
    "author": "Game Engine Team",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "socket.io": "^4.7.4",
        "mongoose": "^8.0.3",
        "redis": "^4.6.11",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2",
        "cors": "^2.8.5",
        "helmet": "^7.1.0",
        "express-rate-limit": "^7.1.5",
        "express-validator": "^7.0.1",
        "swagger-jsdoc": "^6.2.8",
        "swagger-ui-express": "^5.0.0",
        "winston": "^3.11.0",
        "dotenv": "^16.3.1",
        "uuid": "^9.0.1",
        "lodash": "^4.17.21",
        "moment": "^2.29.4",
        "joi": "^17.11.0",
        "compression": "^1.7.4",
        "express-session": "^1.17.3",
        "connect-redis": "^7.1.0",
        "multer": "^1.4.5-lts.1",
        "node-cron": "^3.0.3"
    },
    "devDependencies": {
        "nodemon": "^3.0.2",
        "jest": "^29.7.0",
        "supertest": "^6.3.3",
        "eslint": "^8.55.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.29.0",
        "@babel/core": "^7.23.6",
        "@babel/preset-env": "^7.23.6",
        "@babel/cli": "^7.23.6",
        "babel-jest": "^29.7.0"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}